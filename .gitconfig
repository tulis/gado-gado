[merge]
	tool = kdiff3
[mergetool "kdiff3"]
	path = C:/Program Files (x86)/KDiff3/kdiff3.exe
[diff]
	guitool = kdiff3
[difftool "kdiff3"]
	path = C:/Program Files (x86)/KDiff3/kdiff3.exe
[core]
	editor = \"C:/Program Files (x86)/GitExtensions/GitExtensions.exe\" fileeditor
[alias]
	log-summary = log --decorate --pretty=%h%n%B----------------------------------------
	log-graph = log --graph --decorate --oneline --pretty=format:"%h%x09%an%x09%ad%x09%s"
	merge = merge --ff-only
